    <EditText
        android:id="@+id/calculatorText"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="bottom|end"
        android:maxLines="50"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="20sp"></EditText>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/violet" />
    <EditText
        android:id="@+id/memoryText"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_weight="2"
        android:background="@color/white"
        android:gravity="bottom|end"
        android:maxLines="50"
        android:padding="10dp"
        android:text=""
        android:textAlignment="viewEnd"
        android:textColor="#787575"
        android:textSize="15sp"></EditText>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnAC"
                android:text="AC"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1.5"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />

            <Button
                android:id="@+id/btnDivide"
                android:layout_marginRight="1pt"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:backgroundTint="@color/darkpink"
                android:onClick="operation"
                android:layout_weight="0.17"
                android:text="/"/>

            <Button
                android:id="@+id/btnMultiply"
                android:text="*"
                android:onClick="operation"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="0.17"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />
            <Button
                android:id="@+id/btnC"
                android:text="C"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="0.17"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnExp"
                android:text="x²"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btnSqr"
                android:text="√"
                android:onClick="clickNumber"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:onClick="clickNumber"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />
            <Button
                android:id="@+id/btn8"
                android:text="8"
                android:onClick="clickNumber"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />
            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:onClick="clickNumber"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />

            <Button
                android:id="@+id/btnPlus"
                android:text="+"
                android:onClick="operation"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnLg"
                android:text="lg"
                android:onClick="clickNumber"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btnLn"
                android:text="ln"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btn4"
                android:text="4"
                android:onClick="clickNumber"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />
            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:onClick="clickNumber"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />
            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:onClick="clickNumber"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />

            <Button
                android:id="@+id/btnMinus"
                android:text="-"
                android:onClick="operation"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnSin"
                android:text="sin"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btnCos"
                android:text="cos"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:onClick="clickNumber"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />
            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:onClick="clickNumber"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />
            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:onClick="clickNumber"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />

            <Button
                android:id="@+id/btnPlusMinus"
                android:text="+-"
                android:onClick="clickNumber"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnOpen"
                android:text="("
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="0.25"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btnClose"
                android:text=")"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="0.25"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btnDot"
                android:text="."
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="0.25"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />

            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="0.25"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />

            <Button
                android:id="@+id/btnEqual"
                android:text="="
                android:textSize="8pt"
                android:height="10pt"
                android:width="15pt"
                android:layout_weight="1.2"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>