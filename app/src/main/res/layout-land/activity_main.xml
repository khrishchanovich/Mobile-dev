<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="text"
        android:text="0"
        android:textSize="35pt" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnAC"
                android:text="AC"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="2.2"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />

            <Button
                android:id="@+id/btnDivide"
                android:text="/"
                android:onClick="operation"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="0.2"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />
            <Button
                android:id="@+id/btnMultiply"
                android:text="*"
                android:onClick="operation"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="0.2"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />
            <Button
                android:id="@+id/btnC"
                android:text="C"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="0.2"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/blue"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnExp"
                android:text="x²"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btnSqr"
                android:text="√"
                android:onClick="clickNumber"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btn7"
                android:text="7"
                android:onClick="clickNumber"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />
            <Button
                android:id="@+id/btn8"
                android:text="8"
                android:onClick="clickNumber"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />
            <Button
                android:id="@+id/btn9"
                android:text="9"
                android:onClick="clickNumber"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />

            <Button
                android:id="@+id/btnPlus"
                android:text="+"
                android:onClick="operation"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnLg"
                android:text="lg"
                android:onClick="clickNumber"
                android:textSize="9.7pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btnLn"
                android:text="ln"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btn4"
                android:text="4"
                android:onClick="clickNumber"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />
            <Button
                android:id="@+id/btn5"
                android:text="5"
                android:onClick="clickNumber"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />
            <Button
                android:id="@+id/btn6"
                android:text="6"
                android:onClick="clickNumber"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />

            <Button
                android:id="@+id/btnMinus"
                android:text="-"
                android:onClick="operation"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnSin"
                android:text="sin"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btnCos"
                android:text="cos"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btn1"
                android:text="1"
                android:onClick="clickNumber"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />
            <Button
                android:id="@+id/btn2"
                android:text="2"
                android:onClick="clickNumber"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />
            <Button
                android:id="@+id/btn3"
                android:text="3"
                android:onClick="clickNumber"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />

            <Button
                android:id="@+id/btnPlusMinus"
                android:text="+-"
                android:onClick="clickNumber"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/btnOpen"
                android:text="("
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btnClose"
                android:text=")"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/violet"
                />
            <Button
                android:id="@+id/btnPercent"
                android:text="%"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />
            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
                />
            <Button
                android:id="@+id/btnDot"
                android:text="."
                android:onClick="clickNumber"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />
            <Button
                android:id="@+id/btnEqual"
                android:text="="
                android:onClick="resultEqual"
                android:textSize="10pt"
                android:height="15pt"
                android:width="15pt"
                android:layout_weight="1"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />
        </TableRow>
    </TableLayout>

</LinearLayout>