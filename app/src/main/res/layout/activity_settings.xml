<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:addStatesFromChildren="false"
    android:orientation="vertical"
    tools:context=".firebase.SettingsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue"
        android:elevation="1dp"
        android:theme="@style/Base.Theme.SettingsActivity"
        app:titleTextColor="@android:color/white" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:columnCount="4"
        android:rowCount="1"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/theme1"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:theme="@style/Theme.ButtonBlue"
            android:background="@drawable/round_button"
            android:textSize="11sp"
            android:text="Pig" />

        <Button
            android:id="@+id/theme2"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:theme="@style/Theme.ButtonOrange"
            android:background="@drawable/round_button"
            android:textSize="11sp"
            android:text="Sun" />

        <Button
            android:id="@+id/theme3"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:theme="@style/Theme.ButtonGreen"
            android:background="@drawable/round_button"
            android:textSize="11sp"
            android:text="Lemon" />

        <Button
            android:id="@+id/theme4"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:layout_margin="2dp"
            android:layout_columnWeight="1"
            android:theme="@style/Theme.ButtonPurple"
            android:background="@drawable/round_button"
            android:textSize="11sp"
            android:text="Sky" />
    </GridLayout>

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gridLayout"
        android:layout_margin="10sp"
        android:text="Сменить пароль"
        android:id="@+id/changePassword"/>

</LinearLayout>