            <Button
                android:id="@+id/btnDot"
                android:text="."
                android:textSize="15pt"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="0.05"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/darkpink"
                />

            <Button
                android:id="@+id/btn0"
                android:text="0"
                android:textSize="15pt"
                android:height="30pt"
                android:width="30pt"
                android:layout_weight="0.05"
                android:layout_marginRight="1pt"
                android:backgroundTint="@color/pink"
